#####        ######### MID Grid With Joystick##########        #####
        RelativeLayout:
            id: id2
            size_hint_x: 0.8
            Label:
                id: padX
                pos: 0,50
                valVw: 33
              #  text: '{}'.format(asd.valX)
            Label:
                id: padY
                pos: 0, 0
            Label:
                id: padYY
                pos: 0, 100
            Label:
                id: padXX
                pos: 0, 150

                ######### JOYSTICK ##########
            RelativeLayout:
                size_hint: None, None
                size: 200, 200
                pos: (self.parent.width/2 - (self.width/2)), 0
                id: GridUnderJoy
                valX: self.width
                valY: self.height

                canvas.before:
                    Color:
                        rgba: 160/255, 160/255, 160/255, 1
                    Line:
                        rectangle:(0,0,200,200)
                        width:0.3
                      #  size: GridUnderJoy.width, GridUnderJoy.height

                canvas:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        circle: (100,100, 100)
                        width: 2                 ### szerokosÄ‡ lini ###


                Circle:
                    canvas.before:
                        Color:
                            rgba: 115/255, 115/255, 115/255, 1
                        Ellipse:
                            pos: self.pos
                            size: self.size
            
                    id: cir
                    size_hint: None, None
                    size: 50, 50
                    drag_rectangle: self.x, self.y, self.width, self.height
                    drag_timeout: 1000000000
                    drag_distance: 0
                    pos: (GridUnderJoy.width/2)-(self.width/2),(GridUnderJoy.height/2)-(self.height/2)

                    po1 : self.pos


